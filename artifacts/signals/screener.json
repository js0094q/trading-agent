{
  "meta": {
    "name": "tomorrow_screener",
    "as_of_date": "2026-02-24",
    "timezone": "America/New_York",
    "purpose": "Pre-market watchlist + liquid movers with tight execution costs, suitable for day/swing setups."
  },
  "defaults": {
    "min_price_usd": 2.0,
    "max_price_usd": 2000.0,
    "min_avg_dollar_volume_20d": 20000000,
    "min_rvol": 1.3,
    "max_spread_pct": 0.0025,
    "min_atr_pct_14d": 0.015,
    "exclude_halt_risk": true,
    "exclude_recent_reverse_splits_days": 60,
    "require_options_liquidity": false,
    "notes": {
      "rvol": "Relative volume vs 20-day average (or comparable baseline).",
      "spread_pct": "Typical quoted spread / mid price (e.g., 0.001 = 0.10%).",
      "atr_pct": "ATR(14) / price, filters for movement potential."
    }
  },
  "asset_classes": {
    "stocks": {
      "enabled": true,
      "rules": {
        "min_market_cap_usd": 2000000000,
        "min_avg_share_volume_20d": 3000000,
        "max_spread_pct": 0.0020,
        "min_rvol": 1.3,
        "min_gap_pct_premarket": 0.0,
        "catalyst_required": false
      },
      "preferred_universe": [
        "mega_cap",
        "large_cap",
        "liquid_mid_cap"
      ],
      "tags": [
        "trend",
        "breakout",
        "mean_reversion",
        "earnings",
        "news"
      ]
    },
    "etfs": {
      "enabled": true,
      "rules": {
        "min_avg_dollar_volume_20d": 50000000,
        "max_spread_pct": 0.0015,
        "min_rvol": 1.2,
        "min_atr_pct_14d": 0.01
      },
      "preferred_universe": [
        "index",
        "sector",
        "thematic_liquid"
      ],
      "tags": [
        "risk_on",
        "risk_off",
        "sector_strength",
        "volatility"
      ]
    },
    "crypto": {
      "enabled": true,
      "venue": "spot",
      "quote_currency": "USD",
      "rules": {
        "min_24h_quote_volume_usd": 100000000,
        "max_spread_pct": 0.0015,
        "min_rvol": 1.2,
        "min_atr_pct_14d": 0.02
      },
      "preferred_universe": [
        "majors",
        "top_20_liquid"
      ],
      "tags": [
        "momentum",
        "breakout",
        "range"
      ]
    }
  },
  "output": {
    "sort_by": [
      { "field": "rvol", "direction": "desc" },
      { "field": "atr_pct_14d", "direction": "desc" }
    ],
    "limit_per_asset_class": {
      "stocks": 30,
      "etfs": 20,
      "crypto": 20
    },
    "fields": [
      "symbol",
      "asset_class",
      "rvol",
      "spread_pct",
      "atr_pct_14d",
      "avg_dollar_volume_20d",
      "note",
      "tags"
    ]
  },
